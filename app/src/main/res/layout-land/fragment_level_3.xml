<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/level_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context=".level_1">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/maincharacter"
        android:layout_width="161dp"
        android:layout_height="163dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="137dp"
        android:layout_height="33dp"
        android:layout_marginStart="244dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coin_name" />

    <ImageView
        android:id="@+id/bob"
        android:layout_width="170dp"
        android:layout_height="169dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/table_of_results"
        android:layout_width="325dp"
        android:layout_height="255dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coin_table" />

    <TextView
        android:id="@+id/dialoge"
        android:layout_width="339dp"
        android:layout_height="172dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="64dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/buttonImage"
        android:layout_width="258dp"
        android:layout_height="93dp"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/big_button_1" />

    <TextView
        android:id="@+id/buttonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="36dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/buttonImage"
        app:layout_constraintTop_toTopOf="@+id/buttonImage" />

    <TextView
        android:id="@+id/table_result_you"
        android:layout_width="94dp"
        android:layout_height="132dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="196dp"
        android:textAlignment="viewStart"
        android:textColor="#F44336"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/table_result_bob"
        android:layout_width="94dp"
        android:layout_height="133dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="24dp"
        android:textAlignment="viewStart"
        android:textColor="#3F51B5"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graphPlayer"
        android:layout_width="145dp"
        android:layout_height="115dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="128dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graphBob"
        android:layout_width="145dp"
        android:layout_height="115dp"
        android:layout_marginStart="284dp"
        android:layout_marginTop="128dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>