<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/level_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context=".level_1">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/maincharacter"
        android:layout_width="161dp"
        android:layout_height="163dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="104dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/Button"
        android:layout_width="323dp"
        android:layout_height="135dp"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/square" />

    <TextView
        android:id="@+id/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="260dp"
        android:layout_marginBottom="68dp"
        android:text="@string/yes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/cloud_dialoge_first"
        android:layout_width="393dp"
        android:layout_height="413dp"

        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cloud_dialoge" />

    <TextView
        android:id="@+id/CloudText"
        android:layout_width="227dp"
        android:layout_height="129dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="84dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/dialoge_1"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="148dp"
        android:layout_height="115dp"
        android:layout_marginStart="616dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="43dp" />

</androidx.constraintlayout.widget.ConstraintLayout>